<?xml version="1.0" encoding="UTF-8"?>

<robot name="tutorial_robot">

    <link name="base_link">
    <visual>
        <geometry>
            <box size="0.3 0.2 0.1"/>
        </geometry>

        <origin xyz="0 0 0" rpy="0 0 0"/>

        <!-- 
        declare color 
        this color is differenet from the color in Gazebo 
        -->
        <material name="Cyan">
           <color rgba="0 1.0 1.0 1.0"/>
        </material>

    </visual>

    <!-- 
    declare collision element
    collision element is different from visual element 
    -->
    <collision>
        <geometry>
            <box size="0.3 0.2 0.1"/>
        </geometry>
        <origin xyz="0 0 0" rpy="0 0 0"/>
    </collision>
    
  </link>

</robot>